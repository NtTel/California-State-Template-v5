{% extends "./base.njk" %}
{% block content %}
<div id="main-content" class="main-content">
	<main class="main-primary" id="main">
		<div class="container p-b-lg p-t-md">
			<div class="row">
				<div class="col-md-3">
					<nav aria-labelledby="components-list" style="max-height:800px; overflow:auto" class="side-navigation">
						<div class="h4 m-t-0" id="components-list"><a href="/sample/" class="sidenav nav-heading">Components</a></div>
		   <!--Links with subnav-->
					{% for item in components.components %}
      {% if 'subnav' in item %}
        <cagov-accordion class="sidenav">
         <details {{ helpers.getOpenAttr(item.url, page.url) | safe }}>
          <summary {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</summary>
          <div class="accordion-body">
            <!--subnav-->
           <ul class="side-subnav">
            {% for subitem in item.subnav %}
            <li>
             <a href="{{ subitem.url }}">{{ subitem.text }}</a>
            </li>
            {% endfor %}
           </ul>
          </div>
         </details>
        </cagov-accordion>
        <!--Links with subnav-->
       {% else %}
         <a href="{{ item.url }}" {{ helpers.getSidenav(item.url, page.url) | safe }} class="sidenav">{{ item.text }}</a>
       {% endif %}
      {% endfor %}

						<div class="h4"><a href="/sample/css-units.html" class="sidenav nav-heading">CSS Units</a></div>
						{% for item in cssunits.cssunits %}
						  <a href="{{ item.url }}" {{ helpers.getSidenav(item.url, page.url) | safe }}  class="sidenav">{{ item.text }}</a>
						{% endfor %}

					</nav>
				</div>
				<div class="col-md-9">
					{{ content | safe }}
				</div>
			</div>
		</div>
	</main>
</div>
{% endblock %}